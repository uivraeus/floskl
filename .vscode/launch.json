  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "preLaunchTask": "create/activate venv",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "floskl",
        "FLASK_RUN_PORT": "5000",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger", // .ðŸ‘‰ https://flask.palletsprojects.com/en/2.3.x/debugging/#external-debuggers
        //"--no-reload"  // Trade-off; see linked documentation
      ],
      "jinja": true,
      "justMyCode": true,
    },
    {
      "name": "Python: Init database",
      "type": "python",
      "preLaunchTask": "create/activate venv",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "floskl"
      },
      "args": [
        "init-db"
      ],
      "justMyCode": true,
    }
  ]
}
